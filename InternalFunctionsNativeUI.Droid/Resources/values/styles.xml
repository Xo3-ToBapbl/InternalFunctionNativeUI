<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">?colorAppBar</item>
    <item name="colorPrimaryDark">?colorSystemBar</item>
    <item name="colorAccent">?colorEmphasize</item>
    <item name="android:textColorPrimary">?colorTextCommonLight</item>
    <item name="android:textColorSecondary">?colorTextCommonLight</item>
    <item name="android:colorBackground">?colorBackgroundMain</item>
    <item name="android:windowBackground">?colorBackgroundMain</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
  </style>                    

  <style name="SwitchCompatTheme">
    <item name="colorControlActivated">?colorEmphasize</item>
    <item name="trackTint">#528c93</item>
  </style>

  <style name="AppTheme.Light">
    <item name="colorAppBar">@color/colorDeepLightBlue</item>
    <item name="colorSystemBar">@color/colorDeepDarkBlue</item>
    <item name="colorEmphasize">@color/colorLightAzure</item>
    <item name="colorButtonMain">@color/colorLightAzure</item>
    <item name="colorButtonAdditional">@color/colorLightPurple</item>
    <item name="colorButtonFunctions">@color/colorLightGreen</item>
    <item name="colorButtonActivities">@color/colorOrange</item>
    <item name="colorBackgroundMain">@color/colorSemiWhite</item>
    <item name="colorBackgroundAdditional">@color/colorLightAzure</item>
    <item name="colorTextCommon">@color/colorDeepLightBlue</item>
    <item name="colorTextCommonLight">@color/colorSemiWhite</item>
  </style>

  <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@color/colorSemiWhite</item>
  </style>

</resources>
